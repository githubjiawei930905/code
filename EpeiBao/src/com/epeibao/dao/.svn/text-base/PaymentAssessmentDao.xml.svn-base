<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.epeibao.dao.PaymentAssessmentDao" >
   <sql id="Base_Column_List" >
    ComprehensiveAssessmentID,ContractPaymentTime,ContractPayment,ContractPaymentDeadline,
ServiceChargeTime,ServiceCharge,ServiceChargeDeadline,DealType,DealNumber,
ifAssessment,CauseAnalysis
  </sql>
  
   <select id="findById" resultType="com.epeibao.po.PaymentAssessment"  parameterType="java.lang.String">
      select 
      <include refid="Base_Column_List" />
      from PaymentAssessment 
      where ComprehensiveAssessmentID = #{comprehensiveAssessmentID}
   </select>
   
   
   <select id="findByDriverId" resultType="com.epeibao.po.PaymentAssessment"  parameterType="java.lang.String">
      select 
      <include refid="Base_Column_List" />
      from PaymentAssessment 
      where ComprehensiveAssessmentID like #{driverId}+'%'
   </select>
 
</mapper>