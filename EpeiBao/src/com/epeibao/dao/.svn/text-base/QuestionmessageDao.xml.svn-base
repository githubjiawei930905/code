<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.epeibao.dao.QuestionmessageDao" >
  <resultMap id="BaseResultMap" type="com.epeibao.po.Questionmessage" >
    <id column="QuestionID" property="questionid" jdbcType="VARCHAR" />
    <result column="QuestionDescribe" property="questiondescribe" jdbcType="NVARCHAR" />
    <result column="Answer" property="answer" jdbcType="NVARCHAR" />
    <result column="CoursewareID" property="coursewareid" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    QuestionID, QuestionDescribe, Answer, CoursewareID
  </sql>
  
  <select id="findById" resultType="com.epeibao.po.Questionmessage" parameterType="java.lang.String" >
    select 
    <include refid="Base_Column_List" />
    from QuestionMessage
    where QuestionID = #{questionid,jdbcType=VARCHAR}
  </select>
  
    <select id="findRandomcompanyQuestionmessage" resultType="com.epeibao.po.Questionmessage" parameterType="list" >
    select 
    top(select q.CommonalityQuestions from 
	OrganizationMessage o join QuestionsProject q  
	on o.OrganizationID=#{organizationId} and o.QuestionsProjectID = q.QuestionsProjectID
)
    <include refid="Base_Column_List" />
    from QuestionMessage
    where CoursewareID in
	 <foreach collection="list" item="list"  open="(" separator="," close=")">  
        #{list}  
     </foreach> 
  </select>
  
      <select id="findRandomCommonQuestionmessage" resultType="com.epeibao.po.Questionmessage" parameterType="list" >
    select 
    top(select q.CommonalityQuestions from 
	OrganizationMessage o join QuestionsProject q  
	on o.OrganizationID=#{organizationId} and o.QuestionsProjectID = q.QuestionsProjectID
)
    <include refid="Base_Column_List" />
    from QuestionMessage
    where CoursewareID in
	 <foreach collection="list" item="list"  open="(" separator="," close=")">  
        #{list}  
     </foreach> 
  </select>
  
  
  <delete id="deleteQuestionmessage" parameterType="java.lang.String" >
    delete from QuestionMessage
    where QuestionID = #{questionid,jdbcType=VARCHAR}
  </delete>
 
  <insert id="insertQuestionmessage" parameterType="com.epeibao.po.Questionmessage" >
    insert into QuestionMessage (QuestionID, QuestionDescribe, Answer, 
      CoursewareID)
    values (#{questionid,jdbcType=VARCHAR}, #{questiondescribe,jdbcType=NVARCHAR}, #{answer,jdbcType=NVARCHAR}, 
      #{coursewareid,jdbcType=VARCHAR})
  </insert>
  
  <update id="updateQuestionmessage" parameterType="com.epeibao.po.Questionmessage" >
    update QuestionMessage
    set QuestionDescribe = #{questiondescribe,jdbcType=NVARCHAR},
      Answer = #{answer,jdbcType=NVARCHAR},
      CoursewareID = #{coursewareid,jdbcType=VARCHAR}
    where QuestionID = #{questionid,jdbcType=VARCHAR}
  </update>
</mapper>