<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epeibao.dao.VehicleMessageDao">
	<insert id="insertVehicleMessage" parameterType="com.epeibao.po.VehicleMessage">
		insert into
		VehicleMessage
		(BusNumber,VehicleType,VehicleColor,TerminalSIM_ID,CompanyID)values(#{busNumber},#{vehicleType},#{vehicleColor},#{terminalSIM_ID},#{companyID});
	</insert>

	<delete id="deleteVehicleMessage" parameterType="String">
		delete from
		VehicleMessage where BusNumber=#{busNumber}
	</delete>

	<update id="updateUserMessage" parameterType="com.epeibao.po.VehicleMessage">

		update
		VehicleMessage set
		BusNumber=#{busNumber},VehicleType=#{vehicleType},VehicleColor=#{vehicleColor},TerminalSIM_ID=#{terminalSIM_ID},CompanyID=#{companyID};
	</update>

	<!-- 按ID查询车辆信息 -->
	<select id="selectVehicleMessageByBusNumber" parameterType="String"
		resultType="com.epeibao.po.VehicleMessage">
		select
		BusNumber,VehicleType,VehicleColor,TerminalSIM_ID,CompanyID
		from
		VehicleMessage where BusNumber=#{busNumber}
	</select>

	<!-- 查询全部车辆信息 -->
	<select id="selectVehicleMessagies" resultType="com.epeibao.po.VehicleMessage">
		select
		BusNumber,VehicleType,VehicleColor,TerminalSIM_ID,CompanyID
		from
		VehicleMessage
	</select>

	<select id="getCompanyIDByBusNumber" parameterType="String"
		resultType="String">

		select CompanyID from VehicleMessage where BusNumber =
		#{busNumber};
	</select>
</mapper>